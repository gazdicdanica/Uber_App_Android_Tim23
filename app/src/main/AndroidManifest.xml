            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".activities.driver.DriverInboxActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".activities.driver.DriverRideHistoryActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity
            android:name=".activities.passenger.PassengerRideHistoryActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
